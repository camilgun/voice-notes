{
  "name": "voice-notes",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "pnpm -F @voice-notes/backend dev",
    "dev:frontend": "pnpm -F @voice-notes/frontend dev",
    "dev:all": "pnpm -r --parallel dev",
    "build": "pnpm -r build",
    "build:frontend": "pnpm -F @voice-notes/frontend build",
    "build:backend": "pnpm -F @voice-notes/backend build",
    "transcribe": "pnpm -F @voice-notes/backend transcribe",
    "whisper:start": "pnpm -F @voice-notes/backend whisper:start",
    "typecheck": "pnpm -r typecheck"
  },
  "devDependencies": {
    "typescript": "^5.7.3"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "pnpm@9.15.4"
}
