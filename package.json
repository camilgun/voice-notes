{
  "name": "voice-notes",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "bin": {
    "transcribe": "./src/cli.ts"
  },
  "scripts": {
    "transcribe": "bun run src/cli.ts",
    "server:start": "~/whisper.cpp/build/bin/whisper-server -m ~/whisper.cpp/models/ggml-large-v3.bin --convert --port 8080 -l auto -t 4 -p 4",
    "server:stop": "pkill -f whisper-server",
    "build": "bun build src/cli.ts --target=bun --outdir=dist",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5"
  }
}
